<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gh4a"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/options_tts_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_enable_text_to_speech"/>
    <ScrollView
        android:id="@+id/options_font_example_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:scrollbars="none">
        <TextView
            android:id="@+id/options_font_example_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/options_example_font_size_text"
            />
    </ScrollView>
    <SeekBar
        android:id="@+id/options_font_size_picker"
        android:max="40"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

